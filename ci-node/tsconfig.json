{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@services": [
                "./src/services/*"
            ]
        },
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}